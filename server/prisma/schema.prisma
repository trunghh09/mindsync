generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  fullName  String
  avatar    String
  bio       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token UserToken[]

  @@index([email])
  // Name table
  @@map("users")
}

// User token
model UserToken {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  token String @unique

  userAgent String? // Thiết bị, trình duyệt (optional)
  ipAddress String? // Địa chỉ IP (optional)

  createdAt DateTime @default(now())
  expireAt  DateTime // Hạn dùng refresh token

  @@index([userId, expireAt])
  @@map("tokens")
}
